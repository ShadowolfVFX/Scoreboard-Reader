{
  "name": "scoreboard-reader",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:win": "GH_TOKEN=${{ secrets.GH_TOKEN }} electron-builder --win",
    "tailwind": "npx @tailwindcss/cli -i ./index.css -o ./dist/output.css --watch"
  },
  "keywords": [],
  "author": "ShadowolfVFX",
  "license": "ISC",
  "description": "An app to get scoreboard info",
  "dependencies": {
    "@tailwindcss/cli": "^4.0.6",
    "nbt": "^0.8.1",
    "node-nbt": "^1.0.0",
    "prismarine-nbt": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "net.shadowolfvfx.ScoreboardReader",
    "productName": "Scoreboard Reader",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "icon": "build/icons/icon.png",
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": "nsis"
    }
  }
}
